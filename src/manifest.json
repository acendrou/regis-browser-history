{
  "manifest_version": 2,
  "name": "REGIS-BROWSER-HISTORY",
  "version": "0.1",
  "description": "Capture web browsing history",
  "author": "acendrou",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "REGIS-BROWSER-HISTORY",
    "default_popup": "popup/choose_options.html"
  },
  "permissions": [
    "history",
    "downloads"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "regis-browser-history@ekvidi"
    }
  }
}
